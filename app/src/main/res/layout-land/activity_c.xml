<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:padding="5dp">

	<ImageView
		android:layout_height="wrap_content"
		android:layout_width="200dp"
		android:id="@+id/activity_cImageView"
		android:padding="5dp"
		android:layout_below="@+id/activity_cTitle"
		android:background="@layout/img"
		android:src="@drawable/myprofile"
		android:adjustViewBounds="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentBottom="true"
		android:baselineAlignBottom="true"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/activity_cTitle"
		android:text="Mutali Nepfumbada"
		style="@style/text_title"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/activity_cTitle"
		android:layout_toRightOf="@+id/activity_cImageView"
		android:id="@+id/activityc_track"
		style="@style/text_info"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<TextView
		android:layout_below="@+id/activityc_track"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Text"
		android:layout_marginStart="10dp"
		android:textAlignment="viewStart"
		android:id="@+id/activityc_country"
		android:layout_toRightOf="@+id/activity_cImageView"
		android:textAppearance="?android:attr/textAppearanceMedium"
		style="@style/text_info"/>

	<TextView
		android:layout_below="@+id/activityc_country"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Text"
		android:layout_toRightOf="@+id/activity_cImageView"
		android:id="@+id/activityc_email"
		android:textAppearance="?android:attr/textAppearanceMedium"
		style="@style/text_info"/>

	<TextView
		android:layout_below="@+id/activityc_email"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Text"
		android:layout_toRightOf="@+id/activity_cImageView"
		android:id="@+id/activityc_phone"
		android:textAppearance="?android:attr/textAppearanceMedium"
		style="@style/text_info"/>

	<TextView
		android:layout_toRightOf="@+id/activity_cImageView"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Text"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/activityc_slackusername"
		style="@style/text_info"
		android:layout_below="@+id/activityc_phone"/>

</RelativeLayout>

