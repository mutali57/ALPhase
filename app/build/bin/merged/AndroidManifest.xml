<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mutali.phase"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <meta
        name="viewport"
        content="user-scalable=yes" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/images"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mutali.phase.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mutali.phase.ActivityB"
            android:label="@string/activityb"
            android:parentActivityName="com.mutali.phase.MainActivity" />
        <activity
            android:name="com.mutali.phase.ActivityC"
            android:label="@string/activityc"
            android:parentActivityName="com.mutali.phase.MainActivity" />
    </application>

</manifest>